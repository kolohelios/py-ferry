#games
    .modal-header
        h3.modal-title Sell a Ferry
        a.pull-right(href="" ng-click="cancel()" style="margin-top: -25px;") X
    .modal-body
        span.ferry-div(ng-repeat="ferry in ferries" ng-click="selectFerry(ferry.id)" ng-class="{ selected: ferryId == ferry.id }")
            h5(ng-bind="ferry.name")
            p(ng-bind="ferry.depreciated_value | currency : '$' : 0")
    .modal-footer
        button.btn.btn-default(ng-click="sell()") Sell
        button.btn.btn-default(ng-click="cancel()") Cancel
    