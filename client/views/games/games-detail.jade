#games.container.games-detail
    .row
        .col-xs-12.col-sm-5
            p image here
        .col-xs-12.col-sm-7
            .row
                .col-xs-5.col-xs-offset-5
                    h3 Ferries
            .row
                .col-xs-6.col-sm-5
                    br
                    a.btn.btn-default(href="" ng-click="ferry.buy()") Buy Ferry
                    a.btn.btn-default(href="" ng-click="ferry.sell()") Sell Ferry
                    a.btn.btn-default(href="" ng-click="open('sm')") Maintenance
                    a.btn.btn-default(href="") Staffing
                .col-xs-6.col-sm-7
                    div(uib-accordion close-others="oneAtATime" style="width: 100%;")
                        div.panel-default(uib-accordion-group ng-repeat="ferry in game().ferries")
                            div(uib-accordion-heading) {{ferry.name}}
                            p Class: {{ferry.ferry_class.name}}
            .row
                .col-xs-5.col-xs-offset-5
                    h3 Routes
            .row
                .col-xs-6.col-sm-5
                    br
                    a.btn.btn-default(href="" ng-click="route.create()") Create Route
                    a.btn.btn-default(href="" ng-click="route.edit()") Edit Route
                .col-xs-6.col-sm-7
                    div(uib-accordion close-others="oneAtATime" style="width: 100%;")
                        div.panel-default(uib-accordion-group ng-repeat="route in game().routes")
                            div(uib-accordion-heading) {{route.first_terminal.abbreviation}} - {{route.second_terminal.abbreviation}}
                            p Distance: {{route.route_distance}}
                            p Passenger Fare: {{route.passenger_fare}}
                            p Car Fare: {{route.car_fare}}
                            p Truck Fare: {{route.truck_fare}}
            .row
                button.btn.btn-warning(ng-click="endTurn()") End Turn
                button.btn.btn-warning(ng-click="endTurn(5)") End 5 Turns
                button.btn.btn-warning(ng-click="turnResults.open()") View Last Turn's Results
        